{
  "compilerOptions": {
    "target": "es6",
    "types": [
      "reflect-metadata",
      "node"
    ],
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "paths": {
    "*": [
      "node_modules/*"
    ]
  },
  "include": [
    "./**/*.ts", "__tests__/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
